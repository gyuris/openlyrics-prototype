  <properties>
    <titles>
      <title>Romjaimba élet száll</title>
      <title lang="en">Glorious Ruins</title>
    </titles>
    <authors>
      <author type="words">Joel Houston</author>
      <author type="music">Joel Houston</author>
      <author type="words">Matt Crocker</author>
      <author type="music">Matt Crocker</author>
    </authors>
