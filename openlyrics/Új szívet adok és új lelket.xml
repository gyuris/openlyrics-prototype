    <verse name="c">
      <lines>
        <chord root="C">Új szívet</chord> <chord root="G">adok és</chord> <chord root="D" structure="min">új lel</chord><chord root="F" structure="maj6">ket</chord>,<br/>
        hogy <chord root="F">bűneitek</chord><chord root="D" structure="min7">ből</chord> <chord root="G" structure="dom7">megtérje</chord><chord root="C">tek</chord>!<chord root="G" structure="dom7"/><br/>
        <chord root="C">Elveszem</chord> <chord root="G">kőszí</chord><chord root="D" structure="min">vei</chord><chord root="F" structure="maj6">tek</chord>,<br/>
        és <chord root="F">hús-szíve</chord><chord root="A" structure="min7">ket</chord> <chord root="B" structure="4-5-m7">oltok belé</chord><chord root="E">tek!</chord>
      </lines>
    </verse>
    <verse name="v1">
      <lines>
        <chord root="A" structure="min">Tiszta vizet</chord> <chord root="E" structure="min">hintek reá</chord><chord root="C">tok,</chord><chord root="E" structure="dom7"/><br/>
        hogy <chord root="A" structure="min">minden szennytől</chord> <chord root="G">megtisztulja</chord><chord root="A" structure="min">tok!</chord><chord root="E" structure="dom7"/><br/>
        És <chord root="A" structure="min">élő Lelkem</chord> <chord root="E" structure="min">oltom belé</chord><chord root="C">tek,</chord><chord root="E" structure="dom7"/><br/>
        hogy <chord root="A" structure="min">törvényeim</chord> <chord root="G">szerint élje</chord><chord root="A" structure="min">tek!</chord><chord root="G" structure="dom7"/>
      </lines>
    </verse>
    <verse name="v2">
      <lines>
        <chord root="A" structure="min">Összegyűjtlek</chord> <chord root="E" structure="min">ezer ország</chord><chord root="C">ból.</chord><chord root="E" structure="dom7"/><br/>
        <chord root="A" structure="min">Visszahozlak</chord> <chord root="G">minden nép kö</chord><chord root="A" structure="min">zül,</chord><chord root="E" structure="dom7"/><br/>
        hogy <chord root="A" structure="min">atyáitok</chord> <chord root="E" structure="min">földjét lakjá</chord><chord root="C">tok.</chord><chord root="E" structure="dom7"/><br/>
        <chord root="A" structure="min">Népem vagy, és</chord> <chord root="G">Urad én va</chord><chord root="A" structure="min">gyok!</chord><chord root="E" structure="dom7"/>
      </lines>
    </verse>
