    <verse name="c">
      <lines>
        <chord name="C">Új szívet</chord> <chord name="G">adok és</chord> <chord name="Dm">új lel</chord><chord name="F6">ket</chord>,<br/>
        hogy <chord name="F">bűneitek</chord><chord name="Dm7">ből</chord> <chord name="G7">megtérje</chord><chord name="C">tek</chord>!<chord name="G7"/><br/>
        <chord name="C">Elveszem</chord> <chord name="G">kőszí</chord><chord name="Dm">vei</chord><chord name="F6">tek</chord>,<br/>és 
        <chord name="F">hús-szíve</chord><chord name="Am7">ket</chord> <chord name="H74">oltok belé</chord><chord name="E">tek!</chord>
      </lines>
    </verse>
    <verse name="v1">
      <lines>
        <chord name="Am">Tiszta vizet</chord> <chord name="Em">hintek reá</chord><chord name="C">tok,</chord><chord name="E7"/><br/>
        hogy <chord name="Am">minden szennytől</chord> <chord name="G">megtisztulja</chord><chord name="Am">tok!</chord><chord name="E7"/><br/>
        És <chord name="Am">élő Lelkem</chord> <chord name="Em">oltom belé</chord><chord name="C">tek,</chord><chord name="E7"/><br/>
        hogy <chord name="Am">törvényeim</chord> <chord name="G">szerint élje</chord><chord name="Am">tek!</chord><chord name="G7"/>
      </lines>
    </verse>
    <verse name="v2">
      <lines>
        <chord name="Am">Összegyűjtlek</chord> <chord name="Em">ezer ország</chord><chord name="C">ból.</chord><chord name="E7"/><br/>
        <chord name="Am">Visszahozlak</chord> <chord name="G">minden nép kö</chord><chord name="Am">zül,</chord><chord name="E7"/><br/>
        hogy <chord name="Am">atyáitok</chord> <chord name="Em">földjét lakjá</chord><chord name="C">tok.</chord><chord name="E7"/><br/>
        <chord name="Am">Népem vagy, és</chord> <chord name="G">Urad én va</chord><chord name="Am">gyok!</chord><chord name="E7"/>
     </lines>
